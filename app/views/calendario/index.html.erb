<%= content_for :content_header do %>
    <h1>Calendario
      <small>Planeaci√≥n en planta. Arrastre los lotes para programarlos</small>
    </h1>
<% end %>
<%= content_for :content_breadcrumb do %>
    <li><%= link_to "Calendario", calendario_index_path %></li>
<% end %>
<%= content_for :title do %>
    Calendario de eventos
<% end %>
<div class="row">
  <div class="col-md-3">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h4 class="box-title">
          <p><i class="fa fa-square text-red"></i> Sin programar</p>
          <p><i class="fa fa-square text-aqua"></i> Sin fecha de ingreso</p>
          <p><i class="fa fa-square text-black"></i> No tiene nada</p>
        </h4>
      </div>
      <div class="box-body ">
        <!-- the events -->
        <div id="external-events">
          <% @lotes.each do |lote| %>
              <div data-url="<%= update_programacion_lote_path(lote) %>" class="external-event <%= color_event_extern(lote)%>">
                <%= lote.referencia.referencia %>
              </div>
          <% end %>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
  <div class="col-md-9">
    <div class="box box-primary">
      <div class="box-body">
        <div id="calendar"></div>
      </div>
    </div>
  </div>
</div>

