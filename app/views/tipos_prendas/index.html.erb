<% content_for :title do
  "Tablas"
end %>
<% update = can? :update, TipoPrenda %>
<% destroy = can? :destroy, TipoPrenda %>
<div class="box box-primary with-border">
  <div class="box-header">
    <h4 class="box-title">Descripción de prenda</h4>
    <div class="box-tools pull-right">
      <% if can? :create, TipoPrenda %>
          <%= link_to new_tipo_prenda_path, :title => "Nueva descripción" do %>
              <%= content_tag(:i, "", :class => "fa fa-plus fa-2x") %>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped table-bordered" id="tipos">
      <thead>
      <tr>
        <% if update || destroy %>
            <th class="no-padding" colspan="<%= update && destroy ? "2" : "1" %>"> Opc.</th>
        <% end %>
        <th title="Descripción">Descripción</th>
      </tr>
      </thead>
      <tbody>
      <% @tipos_prendas.each do |tipo_prenda| %>
          <tr>
            <% if update %>
                <td class="text-center">
                  <%= link_to edit_tipo_prenda_path(tipo_prenda), :title => "Editar" do %>
                      <%= content_tag(:i, "", :class => "fa fa-pencil") %>
                  <% end %>
                </td>
            <% end %>
            <% if destroy %>
                <td class="text-center">
                  <%= link_to tipo_prenda, :class => 'text-red', remote: true, method: :delete, :title => "Eliminar",
                              data: {confirm: '¿Seguro desea eliminar la descripción?', action: 'delete'} do %>
                      <%= content_tag(:i, "", :class => "fa fa-trash-o") %>
                  <% end %>
                </td>
            <% end %>
            <td title="Descripción"><%= tipo_prenda.tipo %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
