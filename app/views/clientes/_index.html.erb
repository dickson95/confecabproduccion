<div class="panel panel-default">
  <div class=" panel-heading">
    <div class="row">
      <div class="col-lg-6">
        <h4>Clientes</h4>
      </div>
      <div class="col-lg-6">
        <div class="col-lg-offset-11">
          <h4>
          <% if can? :manage, Cliente %>
            <%= link_to new_cliente_path, :title =>"Nuevo", class:"btn btn-default btn-circle" do%>
              <%= content_tag(:i, "", :class => "fa fa-plus") %>
            <% end %>
          <% end %>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table  class="table table-striped table-bordered table-hover" id="t_clientes">
      <thead>
        <tr>
          <th>Cliente</th>
          <th>Telefono</th>
          <th>Direccion</th>
          <th>Email</th>
          <% if can? :manage, Cliente %>
          <th></th>
          <% end %>
        </tr>
      </thead>
    
      <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.cliente %></td>
            <td class="col-sm-1"><%= cliente.telefono %></td>
            <td class="col-sm-2"><%= cliente.direccion %></td>
            <td class="col-sm-3"><%= cliente.email %></td>
            <% if can? :manage, Cliente %>
            <td>
              <div class="btn-group">
                <%= link_to edit_cliente_path(cliente), :title =>"Editar", class: "btn btn-primary" do%>
                  <%= content_tag(:i, "", :class => "fa fa-pencil") %>
                <% end %>
                <%= link_to cliente, remote: true, method: :delete, :title => "Eliminar",
                data: { confirm: 'Â¿Seguro desea eliminar el cliente?' }, class: "btn btn-danger" do %>
                  <%= content_tag(:i, "", :class => "fa fa-trash-o") %>
                <% end %>
              </div>
            </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
