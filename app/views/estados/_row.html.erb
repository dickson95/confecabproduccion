<% if empty %>
    <tr data-empty="true">
      <td colspan="<%= can?(:udpate, Estado) ? (actions ? "8" : "7") : "6" %>" >No hay datos disponibles</td>
    </tr>
<% else %>
<tr data-id="<%= estado.id %>">
  <% if actions %>
      <% if can? :update, Estado %>
          <td>
            <%= link_to edit_estado_path(estado), remote: true do %>
                <i class="fa fa-pencil"></i>
            <% end %>
          </td>
      <% end %>
      <% if can? :destroy, Estado %>
          <td>
            <%= link_to estado_path(estado), remote: true, method: :delete, class: "text-red", title: "Desactivar" do %>
                <i class="fa fa-lock"></i>
            <% end %>
          </td>
      <% end %>
  <% else %>
      <td>
        <%= link_to unlock_estado_path(estado), remote: true, method: :patch, class: "text-red", title: "Activar" do %>
            <i class="fa fa-unlock"></i>
        <% end %>
      </td>
  <% end %>
  <td><%= estado.name %></td>
  <td><%= estado.nombre_accion %></td>
  <td><%= estado.secuencia %></td>
  <td><%= estado.pasa %></td>
  <td><%= estado.color %>
    <small class="pull-right"><i class="fa fa-square fa-lg" style="color: <%= estado.color %>;"></i></small>
  </td>
  <td><%= estado.color_claro %>
    <small class="pull-right"><i class="fa fa-square fa-lg" style="color: <%= estado.color_claro %>;"></i></small>
  </td>
</tr>
<% end %>