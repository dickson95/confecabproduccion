<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-6">
        <h4>Estados</h4>
      </div>
      <div class="col-lg-6">
        <div class="col-lg-offset-11">
          <h4>
            <% if can? :manage, Estado %>
              <%= link_to new_estado_path, class:"pull-right btn btn-default btn-circle" do %>
                <%= content_tag :i, "", :class => "glyphicon glyphicon-plus" %>
              <%end%>
            <%end%>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-hover tablas2">
      <thead>
        <tr>
          <th>Estado</th>
          <% if can? :manage, Estado %>
          <th></th>
          <% end %>
        </tr>
      </thead>
    
      <tbody>
        <% @estados.each do |estado| %>
          <tr>
            <td><%= estado.estado %></td>
            <% if can? :manage, Estado %>
            <td>
              <div class="btn-group">
                <%= link_to edit_estado_path(estado), :title =>"Editar", class: "btn btn-info" do%>
                      <%= content_tag(:i, "", :class => "glyphicon glyphicon-pencil") %>
                <% end %>
              </div>
            </td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>