<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-6">
        <h4>Referencias</h4>
      </div>
      <div class="col-lg-6">
        <div class="col-lg-offset-11">
          <h4>
            <% if can? :manage, Referencia %>
              <%= link_to new_referencia_path, class:"pull-right btn btn-default btn-circle" do %>
                <%= content_tag :i, "", :class => "glyphicon glyphicon-plus" %>
              <%end%>
            <%end%>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <!--PÃ¡gina de referencias-->
  <div class="panel-body">
    <table class="table table-striped table-bordered table-hover tablas" >
      <thead>
        <tr>
          <th>Referencia</th>
          <% if can? :manage, Referencia %>
          <th></th>
          <%end%>
        </tr>
      </thead>
    
      <tbody>
        <% @referencias.each do |referencia| %>
          <tr>
            <td>
              <%= referencia.referencia %>
            </td>
            <% if can? :manage, Referencia %>
            <td>
              <div class="btn-group">
                <%= link_to edit_referencia_path(referencia), :title =>"Editar", class: "btn btn-primary" do%>
                      <%= content_tag(:i, "", :class => "glyphicon glyphicon-pencil") %>
                <% end %>
                <%= link_to referencia, remote: true, method: :delete, :title => "Eliminar" ,
                data: { confirm: 'Â¿Seguro desea eliminar la referencia?' }, 
                class: "btn btn-danger" do %>
                  <%= content_tag(:i, "", :class => "glyphicon glyphicon-remove") %>
                <% end %>
              </div>
            </td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>