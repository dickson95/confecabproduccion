<div>
  <div class="well row">
    <h5 class="col-xs-10"><%= @meses[params[:month]][:string] %></h5>
    <button type="button" class="close col-sm-2" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h5>Programación de este mes</h5>
      <div id="programacion_mes" style="height: 100px;"></div>
    </div>
    <div class="col-md-8">
      <h5>Avance de plantas</h5>
      <div id="relatives" style="height: 250px;"></div>
    </div>
  </div>
  <script type="text/javascript">
    new Morris.Donut({
      element: 'programacion_mes',
      data: [
        {label: 'Incompleto', value: "<%= 100 - @global_percente.round %>"},
        {label: 'Completado', value: "<%= @global_percente.round %>"}
      ],
      colors: [
        "#D8DADC",
        "#1868AE"
      ],
      formatter: function (value, data) {
        return value + '%';
      },
      resize: true
    });
    new Morris.Bar({
      element: 'relatives',
      data: [
        {planta: 'Confección', value: <%= @confeccion_relative.round %>},
        {planta: 'Terminación', value: <%= @terminacion_relative.round %>}
      ],
      xkey: 'planta',
      ykeys: ['value'],
      labels: ['Procentaje'],
      hoverCallback: function (index, options, content, row) {
        return row['planta'] + " Total: " + row['value'] + "%";
      },
      resize: true
    });
  </script>
</div>
