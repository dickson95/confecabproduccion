<% content_for :title do %>
    Lotes
<% end %>
<div class="box box-primary with-border" style="margin-top: 20px;">
  <div class="box-header">
    <h4 class="box-title">Lotes</h4>
    <div class="box-tools pull-right">
      <% if can? :export, Lote %>
          <%= link_to options_export_lotes_path, :remote => true, :class => "btn-sm", :id => "exportar", :title => "Exportar excel" do %>
              <i class="fa fa-file-excel-o fa-2x" aria-hidden="true"></i>
          <% end %>
      <% end %>
      <% if can? :create, Lote %>
          <%= link_to new_lote_path(:plc => controller_name), :title => "Nuevo lote", :class => "btn-sm" do %>
              <%= content_tag :i, "", :class => "fa fa-plus fa-2x" %>
          <% end %>
      <% end %>
    </div>

  </div>
  <div class="box-body">
    <table class="table table-striped table-bordered" id="lotes" width="100%" data-source="<%= lotes_path(format: :json) %>">
      <thead>
      <tr>
        <th title="Identificador">#</th>
        <th style="max-width: 40px;"></th>
        <th class="col-md-2" style="min-width: 140px;" title="Cliente">Cliente</th>
        <th class="col-md-2" style="min-width: 80px;" title="Referencia">Referencia</th>
        <th class="col-md-1" title="OP de lote">OP</th>
        <th class="col-md-1" title="Cantidad">Cant</th>
        <th class="col-md-2" title="Descripción de la prenda">Descripción</th>
        <% if can? :prices, Lote %>
            <th class="col-md-2" title="Precio unitario">Precio</th>
            <th class="col-md-2" title="Precio total">Total</th>
        <% end %>
      </tr>
      </thead>
      <tbody></tbody>
    </table>
    <!--Fin de la lista-->
  </div>
</div>
