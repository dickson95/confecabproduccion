<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <%= content_tag :div, "", :class => "alert alert-#{name_flash name}", :id => "notice", :style => "margin-top: 20px;" do %>
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%=msg%>
    <%end%>
  <% end %>
<% end %>
