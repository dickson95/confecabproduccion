<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-6">
        <h4>Procesos adicionales</h4>
      </div>
      <div class="col-lg-6">
        <div class="col-lg-offset-11">
          <h4>
            <% if can? :manage, Estado %>
              <%= link_to new_sub_estado_path, class:"pull-right btn btn-default btn-circle" do %>
                <%= content_tag :i, "", :class => "glyphicon glyphicon-plus" %>
              <%end%>
            <%end%>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-hover tablas2">
      <thead>
        <tr>
          <th>Proceso</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @sub_estados.each do |sub_estado| %>
          <tr>
            <td><%= sub_estado.sub_estado %></td>
            <td>
              <div class="btn-group">
                <%= link_to edit_sub_estado_path(sub_estado), class: "btn btn-primary",
                :title => "Editar proceso" do%>
                  <%=content_tag :i ,"", :class => "glyphicon glyphicon-pencil"%>
                <%end%>
                <%= link_to sub_estado, method: :delete, class: "btn btn-danger",
                data: { confirm: 'Are you sure?' }, :title => "Eliminar proceso" do%>
                  <%=content_tag :i, "", :class => "glyphicon glyphicon-remove"%>
                <%end%>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
