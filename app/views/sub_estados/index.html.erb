<div class="panel panel-default page-header">
  <div class="panel-heading">
    <div class="row">
      <div class="col-xs-10">
        <h4>Procesos adicionales</h4>
      </div>
      <div class="col-sm-2 text-right">
        <% if can? :create, SubEstado %>
          <%= link_to new_sub_estado_path, :title => "Nuevo proceso" do %>
            <%= content_tag :i, "", :class => "fa fa-plus fa-3x" %>
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-bordered table-hover" id="sub_estados">
      <thead>
        <tr>
          <th title="Proceso adicional">Proceso adicional</th>
          <% if can? :manage, SubEstado %>
            <th></th>
          <%end%>
        </tr>
      </thead>
    
      <tbody>
        <% @sub_estados.each do |sub_estado| %>
          <tr>
            <td title="Proceso adicional"><%= sub_estado.sub_estado %></td>
            <% if can? :manage, SubEstado %>
              <td class="col-xs-4">
                <div class="btn-group">
                  <%= link_to edit_sub_estado_path(sub_estado), class: "btn btn-primary",
                  :title => "Editar" do%>
                    <%=content_tag :i ,"", :class => "fa fa-pencil"%>
                  <%end%>
                  <%= link_to sub_estado, method: :delete, class: "btn btn-danger",
                  data: { confirm: 'Are you sure?' }, :title => "Eliminar proceso" do%>
                    <%=content_tag :i, "", :class => "fa fa-trash-o"%>
                  <%end%>
                </div>
              </td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
