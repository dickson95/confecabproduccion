<%= content_for :content_breadcrumb do %>
    <li class="active"><%= link_to "Procesos adicionales", sub_estados_path %></li>
<% end %>
<%= content_for :content_header do %>
    <h1>Procesos adicionales
      <small>Procesos externos a los que son enviados los lotes</small>
    </h1>
<% end %>

<% update = can? :update, SubEstado %>
<% destroy = can? :destroy, SubEstado %>
<div class="box box-primary with-border">
  <div class="box-header">
    <h3 class="box-title">Adicionales</h3>
    <div class="box-tools pull-right">
      <% if can? :create, SubEstado %>
          <%= link_to new_sub_estado_path, :title => "Nuevo proceso" do %>
              <%= content_tag :i, "", :class => "fa fa-plus fa-2x" %>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-striped table-bordered " id="sub_estados">
      <thead>
      <tr>
        <% if update || destroy %>
            <th class="no-padding" colspan="<%= update && destroy ? "2" : "1" %>"> Opc.</th>
        <% end %>
        <th title="Proceso adicional">Proceso adicional</th>
      </tr>
      </thead>

      <tbody>
      <% @sub_estados.each do |sub_estado| %>
          <tr>
            <% if update %>
                <td class="text-center">
                  <%= link_to edit_sub_estado_path(sub_estado), :title => "Editar" do %>
                      <%= content_tag :i, "", :class => "fa fa-pencil" %>
                  <% end %>
                </td>
            <% end %>
            <% if destroy %>
                <td class="text-center">
                  <%= link_to sub_estado, :class => 'text-red', remote: true, method: :delete, :title => "Eliminar",
                              data: {confirm: 'Â¿Seguro desea eliminar el proceso externo?', action: 'delete'} do %>
                      <%= content_tag(:i, "", :class => "fa fa-trash-o") %>
                  <% end %>
                </td>
            <% end %>
            <td title="Proceso adicional"><%= sub_estado.sub_estado %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
