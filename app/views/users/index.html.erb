<%= content_for :content_breadcrumb do %>
    <li class="active"><%= link_to "Usuarios", users_path %></li>
<% end %>
<%= content_for :content_header do %>
    <h1>Todos los usuarios del sistema
      <small>Agregue un nuevo usuario con un tipo de permiso para que pueda acceder al sistema</small>
    </h1>
<% end %>
<% content_for :title do
  "Usuarios"
end %>
<div class="box box-primary with-border">
  <div class="box-header">
    <h3 class="box-title">Usuarios</h3>
    <div class="box-tools pull-right">
      <% if can? :create, User %>
          <%= link_to new_user_path, :title => "Nuevo usuario" do %>
              <%= content_tag :i, "", :class => "fa fa-plus fa-2x" %>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="box-body table-responsive">
    <div class="nav-tabs-custom">
      <ul class="nav nav-tabs">
        <li class="active" data-url="<%= users_path(format: :json, lock?: false) %>">
          <%= link_to "Activos", "#unlock", data: {:toggle => "tab"} %>
        </li>
        <li class="" data-toggle="tab" data-url="<%= users_path(format: :json, lock?: true) %>">
          <%= link_to "Bloqueados", "#lock", data: {:toggle => "tab"} %>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="unlock"></div>
        <div class="tab-pane" id="lock"></div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
</div>