<%content_for :title do "Usuarios" end%>
<div class="panel panel-default page-header">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-6">
        <h1>Usuarios</h1>
      </div>
      <div class="col-lg-6">
        <div class="col-lg-offset-11">
        <%if @rol_form != "gerente"%>
          <h1>
          <%= link_to new_user_path, :title => "Nuevo usuario" do %>
            <%= content_tag :i, "", :class => "fa fa-plus" %>
          <%end%>
          </h1>
        <%end%>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body table-responsive">
    <table class ="table">
      <thead>
        <tr>
          <th title="Nombre">Nombre</th>
          <th title="Cédula">Cédula</th>
          <th title="Correo">Correo</th>
          <th title="Teléfono">Teléfono</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td title="Nombre"><%= user.name %></td>
            <td title="Cédula"><%= user.username %></td>
            <td title="Correo"><%= user.email %></td>
            <td title="Teléfono"><%= user.telefono %></td>
            <td>
                <%=link_to user_path(user) ,{:remote => true, :class => "btn btn-info",
                    :title => "Ver detalles"}  do%>
                    <%=content_tag :i, "", :class => "fa fa-list-alt" %>
                <%end%>
            </td>
            <td>
              <%if current_user.id == user.id%>
                <%=link_to edit_user_registration_path, class: "btn btn-default", 
                :title => "Editar mi perfil" do%>
                    <%=content_tag :i, "", :class => "fa fa-pencil" %>
                <%end%>
              <%elsif @rol_form != "gerente"%>
                <%if user.id == 1%>
                  <%=link_to "",class: "btn btn-danger", :disabled => true,
                  :title => "El usuario administrador no se puede eliminar" do%>
                      <%=content_tag :i, "", :class => "fa fa-trash-o" %>
                  <%end%>
                <%else%>

                  <%=link_to user, method: :delete, class: "btn btn-danger", 
                  :title => "Eliminar", data: { confirm: "Are you sure?" } do%>
                      <%=content_tag :i, "", :class => "fa fa-trash-o" %>
                  <%end%>
                <%end%>
              <%end%>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
aria-labelledby="myModalLabel" aria-hidden="true">
</div>