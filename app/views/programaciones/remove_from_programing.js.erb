<%date = Programacion.date_split params[:month]%>
<%month = date[:month]%>
<%month = @meses.fetch(month.to_i - 1)%>
<%if params[:commit] == "Retirar"%>
	<%@lotes.each do |id|%>
	$("#lotes_<%=id%>").parent().parent().remove();
	<%end%>
	var size_table = $('#<%=month%>t >tbody >tr').length;
	console.log(size_table);
	if (size_table < 1){
		$('#<%=month%>t').parent().replaceWith("<%=j render "table", mes: month%>");
	}
	<%if @no_empty_program%>
		$("#add-lote").prop('disabled', false);
		$("#add-lote").unbind('click');
		$("#add-lote").removeClass("disabled");
		console.log("quitar disabled");
	<%end%>

<%elsif params[:commit] == "Ordenar"%>
	<%price = Programacion.price @rol_form%>
	<%price ? $colspan = 10 : $colspan = 8%>
	$("#<%=month%>t").find("tbody").replaceWith("<%=j render partial: "table_tbody", locals:{mes: month, colspan: $colspan}%>");
<%end%>
