<div class="login-box">
  <div class="login-logo">
    <%= link_to root_path do %>
        <b>CONFE</b>CAB
    <% end %>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg">Cambiar contraseña</p>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <%= f.input :password, required: true, autofocus: true, placeholder: 'Cédula o correo',
                    label: "Nueva contraseña", wrapper: :vertical_input_feedback do %>
            <%= f.input_field :password, class: 'form-control' %>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <% end %>
        <%= f.input :password_confirmation, required: true, autofocus: true, placeholder: 'Cédula o correo',
                    label: "Confirmar contraseña", wrapper: :vertical_input_feedback do %>
            <%= f.input_field :password_confirmation, class: 'form-control' %>
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <% end %>
        <div class="row">
          <div class="col-xs-8">
            <%= render "devise/shared/links" %>
          </div>
          <div class="col-xs-4">
            <%= f.button :submit, 'Aceptar', class: 'btn-primary btn-block btn-flat' %>
          </div>
        </div>
    <% end %>
  </div>
</div>





