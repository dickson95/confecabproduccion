<div class="login-panel panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Cambiar contraseña</h3>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="panel-body">
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, label: "Nueva contraseña", required: true, autofocus: true, hint: ("#{@minimum_password_length} caracteres como mínimo" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "Confirmar contraseña", required: true %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Aceptar", class:"btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
  <div class="panel-footer">
      <%= render "devise/shared/links" %>
  </div>
  <% end %>
</div>





