<div class="login-box">
  <div class="login-logo">
    <%= link_to root_path do %>
        <b>CONFE</b>CAB
    <% end %>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg">Escribe tu correo</p>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <%= f.input :email, required: true, autofocus: true, placeholder: 'CÃ©dula o correo',
                    label: "Correo", wrapper: :vertical_input_feedback do %>
            <%= f.input_field :email, class: 'form-control' %>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <% end %>
        <div class="row">
          <div class="col-xs-6">
            <%= render "devise/shared/links" %>
          </div>
          <div class="col-xs-6">
            <%= f.button :submit, 'Enviar Instrucciones', class: 'btn-primary btn-block btn-flat' %>
          </div>
        </div>
    <% end %>
  </div>
</div>





