<div class="login-panel panel panel-warning">
<div class="panel-heading">
  <h3 class="panel-title">Diligencia estos datos</h3>
</div>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="panel-body">
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, label: 'Correo', autofocus: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Enviar Instrucciones", class:"btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
    <div class="panel-footer">
      <%= render "devise/shared/links" %>
    </div>
<% end %>
</div>